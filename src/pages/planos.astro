---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PricingCard from '../components/PricingCard.astro';
import FAQ from '../components/FAQ.astro';
import AdBanner from '../components/ads/AdBanner.astro';

const title = "Planos e Preços — LideraZap";
const description = "Escolha o plano ideal para sua presença digital: loja no WhatsApp, gestão de redes, landing pages e suporte premium. Sem complicação.";

const whatsappCTA = (plano: string) =>
    `https://wa.me/5532998408646?text=${encodeURIComponent("Olá! Quero o plano " + plano + " da LideraZap.")}`;

const plans = [
    {
        title: "Essencial",
        subtitle: "Para começar com presença profissional",
        price: "R$ 79",
        period: "/mês",
        ctaHref: whatsappCTA("Essencial"),
        ctaLabel: "Assinar Essencial",
        features: [
            "Catálogo simples no WhatsApp",
            "Landing page 1 seção (Hero + CTA)",
            "1 conta @ Google Meu Negócio (otimização básica)",
            "Suporte via WhatsApp (horário comercial)",
            "Hospedagem e SSL inclusos"
        ]
    },
    {
        title: "Pro",
        subtitle: "O mais escolhido para crescer com consistência",
        price: "R$ 149",
        period: "/mês",
        ctaHref: whatsappCTA("Pro"),
        ctaLabel: "Assinar Pro",
        features: [
            "Catálogo completo no WhatsApp (categorias)",
            "Site em Astro (Home + Serviços + Sobre + Contato)",
            "Integrações básicas (Form/WhatsApp, Meta Pixel)",
            "2 posts/semana para redes (templates padronizados)",
            "Otimizações SEO on-page (títulos, descrições, schema)",
            "Suporte prioritário"
        ],
        highlight: true,
        badge: "Mais vendido"
    },
    {
        title: "Expert",
        subtitle: "Para marcas que exigem performance",
        price: "R$ 299",
        period: "/mês",
        ctaHref: whatsappCTA("Expert"),
        ctaLabel: "Assinar Expert",
        features: [
            "Tudo do Pro",
            "Landing dedicada de campanhas (UTM + pixels)",
            "4 posts/semana + variações Reels/Stories",
            "Blog (Astro Content) + pauta mensal",
            "Relatórios mensais (tráfego, leads e mídia)",
            "Suporte avançado + reuniões de alinhamento"
        ]
    }
];

const faqItems = [
    { q: "Posso cancelar quando quiser?", a: "Sim. Não há fidelidade. Cancelamento a qualquer momento, com o serviço ativo até o fim do ciclo." },
    { q: "Vocês configuram o domínio e o e-mail?", a: "Sim. Ajudamos a conectar seu domínio, emitir SSL e orientar a criação de e-mail profissional." },
    { q: "Tenho suporte para conteúdo e imagens?", a: "Sim. Fornecemos templates padronizados e orientamos melhores práticas para fotos e textos." },
    { q: "Posso migrar de plano depois?", a: "Claro. Você pode mudar de plano a qualquer momento; o ajuste ocorre no próximo ciclo." }
];

const productJsonLd = {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Planos LideraZap",
    "brand": { "@type": "Brand", "name": "LideraZap" },
    "description": description,
    "url": "https://liderazap.com/planos",
    "offers": plans.map((p) => ({
        "@type": "Offer",
        "name": p.title,
        "priceCurrency": "BRL",
        "price": p.price.replace(/\D/g, ""),
        "availability": "https://schema.org/InStock",
        "url": "https://liderazap.com/planos",
        "priceValidUntil": new Date(new Date().getFullYear(), 11, 31).toISOString().slice(0,10)
    }))
};
---

<html lang="pt-BR" class="scroll-smooth">
<head>
    <BaseHead title={title} description={description} />
    <!-- AdSense: substitua o client abaixo pelo seu ID -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-xxxxxxxxxxxxxxxx" crossorigin="anonymous"></script>
    <script type="application/ld+json">{JSON.stringify(productJsonLd)}</script>
    </head>
<body class="bg-gradient-to-br from-gray-50 via-white to-gray-100 dark:from-zinc-900 dark:via-zinc-950 dark:to-zinc-900 text-zinc-900 dark:text-zinc-100">
<Header />

<section class="section pt-20">
<div class="container text-center max-w-3xl">
<span class="inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-wider text-primary/90">
<span class="icon-[mdi--lightning-bolt]"></span> Planos e Preços
</span>
<h1 class="mt-3 text-3xl sm:text-4xl font-extrabold tracking-tight">Escolha o plano perfeito para o seu momento</h1>
<p class="mt-3 text-base text-zinc-600 dark:text-zinc-300">
    Estrutura profissional, conteúdo padronizado e performance — tudo pensado para o Google e para vender no WhatsApp.
</p>
</div>
</section>

<div class="container">
    <AdBanner slot="1234567890" />
</div>

<section class="section">
    <div class="container">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
            {plans.map((p) => (
                    <PricingCard
                            title={p.title}
                            subtitle={p.subtitle}
                            price={p.price}
                            period={p.period}
                            ctaHref={p.ctaHref}
                            ctaLabel={p.ctaLabel}
                            features={p.features}
                            highlight={p.highlight}
                            badge={p.badge}
                    />
            ))}
        </div>

        <div class="mt-12 overflow-x-auto rounded-2xl border border-zinc-200/70 dark:border-zinc-700/50 bg-white dark:bg-zinc-900">
            <table class="min-w-[800px] w-full text-sm">
                <thead class="bg-zinc-50 dark:bg-zinc-900/60">
                <tr>
                    <th class="text-left p-4">Recurso</th>
                    <th class="text-left p-4">Essencial</th>
                    <th class="text-left p-4">Pro</th>
                    <th class="text-left p-4">Expert</th>
                </tr>
                </thead>
                <tbody class="[&_tr:nth-child(even)]:bg-zinc-50/50 dark:[&_tr:nth-child(even)]:bg-zinc-900/40">
                <tr>
                    <td class="p-4">Catálogo no WhatsApp</td>
                    <td class="p-4"><span class="icon-[mdi--check]"></span></td>
                    <td class="p-4"><span class="icon-[mdi--check]"></span></td>
                    <td class="p-4"><span class="icon-[mdi--check]"></span></td>
                </tr>
                <tr>
                    <td class="p-4">Site em Astro (páginas)</td>
                    <td class="p-4">Landing básica</td>
                    <td class="p-4">4 páginas</td>
                    <td class="p-4">4 páginas + Blog</td>
                </tr>
                <tr>
                    <td class="p-4">SEO on-page + Schema</td>
                    <td class="p-4">Básico</td>
                    <td class="p-4">Completo</td>
                    <td class="p-4">Avançado</td>
                </tr>
                <tr>
                    <td class="p-4">Conteúdo para redes</td>
                    <td class="p-4">—</td>
                    <td class="p-4">2 posts/semana</td>
                    <td class="p-4">4 posts/semana + Reels</td>
                </tr>
                <tr>
                    <td class="p-4">Suporte</td>
                    <td class="p-4">Comercial</td>
                    <td class="p-4">Prioritário</td>
                    <td class="p-4">Avançado</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>

<div class="container">
    <AdBanner slot="1234567890" />
</div>

<FAQ items={faqItems} jsonLdId="https://liderazap.com/planos#faq" />

<section class="section pb-24">
    <div class="container">
        <div class="rounded-2xl p-8 md:p-10 text-center bg-gradient-to-br from-primary/10 via-white to-primary/10 dark:from-primary/10 dark:via-zinc-900 dark:to-primary/10 border border-primary/20">
            <h3 class="text-2xl md:text-3xl font-extrabold tracking-tight">Pronto para acelerar suas vendas?</h3>
            <p class="mt-3 text-zinc-700 dark:text-zinc-300">Fale com um especialista e ative seu plano ainda hoje. Sem burocracia.</p>
            <a href={whatsappCTA("Pro")} class="mt-6 inline-flex items-center gap-2 rounded-xl bg-primary px-5 py-3 text-white font-medium hover:opacity-90">
                <span class="icon-[mdi--whatsapp] text-xl"></span>
                Falar no WhatsApp
            </a>
        </div>
    </div>
</section>

<div class="container">
    <AdBanner slot="1234567890" />
</div>

<Footer />
</body>
</html>
