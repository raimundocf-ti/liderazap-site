---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const whatsapp = '5532998408646'; // seu número sem + e sem espaços
const wa = (msg: string) => `https://wa.me/${whatsapp}?text=${encodeURIComponent(msg)}`;
---

<html lang="pt-BR" class="scroll-smooth">
<head>
    <BaseHead
            title="LideraZap — Transformando Negócios Digitais"
            description="Loja no WhatsApp, gestão de redes e presença online feita por especialistas. Sem complicação, direto ao ponto."
    />
    <style is:inline>
        :root { --primary:#6C5CE7; }
        .bg-primary{ background-color:var(--primary) }
        .text-primary{ color:var(--primary) }
        .border-primary{ border-color:var(--primary) }
        .ring-primary{ --tw-ring-color:var(--primary) }
        .hide-scrollbar::-webkit-scrollbar{ display:none }
        .hide-scrollbar{ -ms-overflow-style:none; scrollbar-width:none }
    </style>
</head>

<body class="bg-gray-50 text-gray-900 antialiased">
<!-- Header via componente -->
<Header />

<main class="pt-20 md:pt-24">
    <!-- Hero -->
    <section class="relative w-full bg-gray-50 py-16 md:py-24">
        <div class="absolute inset-0 -z-10 overflow-hidden">
            <svg class="absolute left-1/2 top-0 h-full w-full -translate-x-1/2" viewBox="0 0 1024 1024" aria-hidden="true">
                <circle cx="512" cy="512" r="512" fill="url(#gradient-radial-hero)" fill-opacity="0.18"></circle>
                <defs>
                    <radialGradient id="gradient-radial-hero">
                        <stop stop-color="#8B5CF6"></stop>
                        <stop offset="1" stop-color="#6D28D9"></stop>
                    </radialGradient>
                </defs>
            </svg>
        </div>

        <div class="max-w-4xl mx-auto px-6 text-center">
            <span class="inline-block text-base md:text-lg font-semibold text-primary">A Revolução Digital do Seu Negócio</span>
            <h1 class="mt-3 text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight text-balance">
                Tenha sua loja virtual <span class="whitespace-nowrap">direto no WhatsApp</span>
            </h1>
            <p class="mt-4 text-lg md:text-xl text-gray-700">
                Soluções definitivas para WhatsApp Business, redes sociais e presença online — sem enrolação, com especialista de verdade.
            </p>

            <!-- Callout -->
            <div class="mt-10 bg-white rounded-2xl shadow-xl border border-primary/30 p-6 md:p-8">
                <div class="grid grid-cols-1 md:grid-cols-12 items-center gap-6">
                    <div class="md:col-span-2 flex justify-center">
                        <iconify-icon icon="mdi:whatsapp" width="72" height="72" class="text-primary"></iconify-icon>
                    </div>
                    <div class="md:col-span-6 text-center md:text-left">
                        <h3 class="text-xl md:text-2xl font-bold text-gray-900">Precisa de uma solução rápida?</h3>
                        <p class="text-gray-600 mt-1">Sem robôs e sem menus confusos. Você fala direto com um especialista.</p>
                    </div>
                    <div class="md:col-span-4 flex justify-center md:justify-end">
                        <a href={wa('')}
                           target="_blank" rel="noopener"
                           class="inline-flex items-center gap-3 bg-primary hover:opacity-90 text-white font-bold px-6 py-3 rounded-lg shadow transition-transform hover:scale-[1.02] focus:outline-none focus-visible:ring-2 ring-primary">
                            <iconify-icon icon="mdi:whatsapp" width="24" height="24"></iconify-icon>
                            <span>(32) 9 9840-8646</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Serviços -->
    <section id="servicos" class="w-full py-16 md:py-24 bg-gradient-to-br from-gray-50 via-white to-gray-100">
        <div class="max-w-7xl mx-auto px-6 md:px-10">
            <h2 class="text-center text-sm md:text-base font-semibold text-primary">Nossos Serviços</h2>
            <p class="mx-auto mt-2 max-w-2xl text-center text-3xl sm:text-4xl font-extrabold tracking-tight text-gray-900">
                Soluções para transformar seu negócio no digital
            </p>

            <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Card 1 -->
                <article class="bg-white rounded-2xl shadow-md p-8 border border-gray-100 text-center hover:shadow-lg transition">
                    <div class="bg-primary/10 rounded-full w-20 h-20 mx-auto flex items-center justify-center mb-6">
                        <iconify-icon icon="mdi:instagram" width="42" height="42" class="text-primary"></iconify-icon>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900">Gestão de Redes Sociais</h3>
                    <p class="mt-3 text-gray-600">
                        Estratégia, criação de conteúdo e acompanhamento profissional para manter sua marca relevante e engajadora.
                    </p>
                    <ul class="mt-5 space-y-2 text-sm text-gray-700 text-left max-w-sm mx-auto">
                        <li class="flex items-center gap-2">
                            <iconify-icon icon="mdi:check" class="text-primary" width="16"></iconify-icon>
                            Posts e Reels criativos
                        </li>
                        <li class="flex items-center gap-2">
                            <iconify-icon icon="mdi:check" class="text-primary" width="16"></iconify-icon>
                            Planejamento de campanhas
                        </li>
                        <li class="flex items-center gap-2">
                            <iconify-icon icon="mdi:check" class="text-primary" width="16"></iconify-icon>
                            Relatórios de desempenho
                        </li>
                    </ul>
                </article>

                <!-- Card 2 -->
                <article class="bg-white rounded-2xl shadow-md p-8 border border-gray-100 text-center hover:shadow-lg transition">
                    <div class="bg-primary/10 rounded-full w-20 h-20 mx-auto flex items-center justify-center mb-6">
                        <iconify-icon icon="mdi:whatsapp" width="42" height="42" class="text-primary"></iconify-icon>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900">Catálogo de Vendas no WhatsApp</h3>
                    <p class="mt-3 text-gray-600">
                        Transforme seu WhatsApp Business em uma loja virtual prática, acessível e integrada às redes sociais.
                    </p>
                    <ul class="mt-5 space-y-2 text-sm text-gray-700 text-left max-w-sm mx-auto">
                        <li class="flex items-center gap-2">
                            <iconify-icon icon="mdi:check" class="text-primary" width="16"></iconify-icon>
                            Criação e organização de catálogos
                        </li>
                        <li class="flex items-center gap-2">
                            <iconify-icon icon="mdi:check" class="text-primary" width="16"></iconify-icon>
                            Funil de conversão otimizado
                        </li>
                        <li class="flex items-center gap-2">
                            <iconify-icon icon="mdi:check" class="text-primary" width="16"></iconify-icon>
                            Consultoria para aumentar vendas
                        </li>
                    </ul>
                </article>
            </div>
        </div>
    </section>

    <!-- AVALIAÇÕES GOOGLE -->
    <section id="avaliacoes" class="w-full py-16 md:py-24 bg-white">
        <div class="max-w-7xl mx-auto px-6 md:px-10">
            <div class="text-center">
            <span class="inline-flex items-center gap-2 text-sm md:text-base font-semibold uppercase tracking-wide text-primary">
              <iconify-icon icon="mdi:google" width="20" height="20" class="text-primary"></iconify-icon>
              Avaliações no Google
            </span>
                <h2 class="mt-2 text-3xl md:text-4xl font-extrabold tracking-tight text-gray-900">
                    O que dizem sobre a <span class="text-primary">LideraZap</span>
                </h2>

                <!-- Badge de rating -->
                <div class="mt-4 inline-flex items-center gap-3 rounded-full border border-gray-200 px-4 py-2 bg-white shadow-sm">
                    <div class="flex items-center gap-1" aria-label="Classificação média 5 de 5">
                        <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                        <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                        <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                        <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                        <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                    </div>
                    <span class="text-sm text-gray-700">
                <strong class="font-semibold">5.0</strong> / 5 — baseado em <span class="font-semibold">N</span> avaliações
              </span>
                </div>

                <!-- Botão "ver todas" -->
                <div class="mt-5">
                    <a href="SUA_URL_DE_AVALIACOES_GOOGLE" target="_blank" rel="noopener"
                       class="inline-flex items-center gap-2 text-sm font-semibold text-primary hover:opacity-90 focus:outline-none focus-visible:ring-2 ring-primary rounded-lg px-3 py-2">
                        <iconify-icon icon="mdi:open-in-new" width="18" height="18"></iconify-icon>
                        Ver todas no Google
                    </a>
                </div>
            </div>

            <!-- Lista/Carrossel horizontal -->
            <div class="mt-10 overflow-x-auto hide-scrollbar" role="region" aria-label="Depoimentos">
                <ul class="grid grid-cols-1 md:grid-cols-3 gap-6 min-w-[320px] md:min-w-0">
                    <!-- Card 1 -->
                    <li class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
                        <div class="flex items-center gap-4">
                            <img src="/images/avatars/cliente-1.jpg" alt="Foto de cliente"
                                 class="h-12 w-12 rounded-full object-cover bg-gray-100" loading="lazy" />
                            <div>
                                <p class="font-semibold text-gray-900">Nome do Cliente</p>
                                <p class="text-xs text-gray-500">Data da avaliação</p>
                            </div>
                        </div>
                        <div class="mt-3 flex items-center gap-0.5" aria-label="5 de 5">
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                        </div>
                        <p class="mt-3 text-gray-700 leading-relaxed">
                            “Atendimento excelente e muito profissional. A equipe da LideraZap organizou nosso WhatsApp de vendas
                            e em poucos dias já vimos resultado.”
                        </p>
                        <div class="mt-4 flex items-center gap-2 text-xs text-gray-500">
                            <iconify-icon icon="mdi:google" width="16" height="16"></iconify-icon>
                            <span>Avaliação do Google</span>
                        </div>
                    </li>

                    <!-- Card 2 -->
                    <li class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
                        <div class="flex items-center gap-4">
                            <img src="/images/avatars/cliente-2.jpg" alt="Foto de cliente"
                                 class="h-12 w-12 rounded-full object-cover bg-gray-100" loading="lazy" />
                            <div>
                                <p class="font-semibold text-gray-900">Nome do Cliente</p>
                                <p class="text-xs text-gray-500">Data da avaliação</p>
                            </div>
                        </div>
                        <div class="mt-3 flex items-center gap-0.5" aria-label="5 de 5">
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                        </div>
                        <p class="mt-3 text-gray-700 leading-relaxed">
                            “Muito atenciosos! Montaram nosso catálogo do WhatsApp e explicaram como manter tudo atualizado.
                            Recomendo demais.”
                        </p>
                        <div class="mt-4 flex items-center gap-2 text-xs text-gray-500">
                            <iconify-icon icon="mdi:google" width="16" height="16"></iconify-icon>
                            <span>Avaliação do Google</span>
                        </div>
                    </li>

                    <!-- Card 3 -->
                    <li class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
                        <div class="flex items-center gap-4">
                            <img src="/images/avatars/cliente-3.jpg" alt="Foto de cliente"
                                 class="h-12 w-12 rounded-full object-cover bg-gray-100" loading="lazy" />
                            <div>
                                <p class="font-semibold text-gray-900">Nome do Cliente</p>
                                <p class="text-xs text-gray-500">Data da avaliação</p>
                            </div>
                        </div>
                        <div class="mt-3 flex items-center gap-0.5" aria-label="5 de 5">
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                            <iconify-icon icon="mdi:star" width="18" height="18" class="text-yellow-400"></iconify-icon>
                        </div>
                        <p class="mt-3 text-gray-700 leading-relaxed">
                            “A consultoria foi direta e objetiva. Ajustaram nosso funil e as respostas rápidas do WhatsApp.
                            Resultado prático e mensurável.”
                        </p>
                        <div class="mt-4 flex items-center gap-2 text-xs text-gray-500">
                            <iconify-icon icon="mdi:google" width="16" height="16"></iconify-icon>
                            <span>Avaliação do Google</span>
                        </div>
                    </li>
                </ul>
            </div>

            <!-- CTA secundária -->
            <div class="mt-8 text-center">
                <a href="SUA_URL_DE_AVALIACOES_GOOGLE" target="_blank" rel="noopener"
                   class="inline-flex items-center gap-2 bg-gray-900 text-white px-5 py-3 rounded-lg font-semibold shadow hover:opacity-95 focus:outline-none focus-visible:ring-2 ring-primary">
                    <iconify-icon icon="mdi:google" width="20" height="20"></iconify-icon>
                    Ler mais avaliações no Google
                </a>
            </div>
        </div>

        <!-- JSON-LD opcional (preencha com seus dados reais antes de publicar) -->
        <script type="application/ld+json" is:inline>
            {
                "@context": "https://schema.org",
                "@type": "LocalBusiness",
                "name": "LideraZap",
                "url": "https://SEU_DOMINIO",
                "aggregateRating": {
                "@type": "AggregateRating",
                    "ratingValue": "5.0",
                    "reviewCount": "N"
            },
                "review": [
                {
                    "@type": "Review",
                    "author": "Nome do Cliente",
                    "reviewRating": {"@type": "Rating", "ratingValue": "5"},
                    "reviewBody": "Atendimento excelente e muito profissional..."
                }
            ]
            }
        </script>
    </section>

    <!-- Contato -->
    <section id="contato" class="w-full py-16 md:py-24 bg-primary text-white">
        <div class="max-w-3xl mx-auto px-6 text-center">
            <iconify-icon icon="mdi:whatsapp" width="80" height="80" class="text-white/95 inline-block mb-4"></iconify-icon>
            <h2 class="text-4xl md:text-5xl font-extrabold text-balance">Pronto para impulsionar seu negócio?</h2>
            <p class="mt-4 text-lg md:text-xl text-white/90">Sem formulários e sem espera. Clique e fale direto no WhatsApp.</p>

            <a href={wa('Olá! Gostaria de saber mais sobre os serviços da LideraZap.')}
               target="_blank" rel="noopener"
               class="mt-8 inline-flex items-center gap-3 bg-white text-primary px-8 py-4 rounded-full font-extrabold shadow-lg transition-transform hover:scale-[1.02] hover:bg-gray-100 focus:outline-none focus-visible:ring-2 ring-white/70">
                <iconify-icon icon="mdi:whatsapp" width="28" height="28"></iconify-icon>
                <span class="text-xl">(32) 9 9840-8646</span>
            </a>
        </div>
    </section>
</main>

<!-- Footer via componente -->
<Footer />
</body>
</html>
