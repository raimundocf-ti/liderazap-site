---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const whatsapp = '5532998408646';
const wa = (msg: string) => `https://wa.me/${whatsapp}?text=${encodeURIComponent(msg)}`;
---

<html lang="pt-BR" class="scroll-smooth">
<head>
    <BaseHead
            title="LideraZap — Transformando Negócios Digitais"
            description="Loja no WhatsApp, gestão de redes e presença online feita por especialistas. Sem complicação, direto ao ponto."
    />
</head>

<body class="antialiased bg-[var(--surface-2)] text-gray-900 dark:text-gray-100">
<Header />

<main>
    <!-- ================= HERO ================= -->
    <section class="relative overflow-hidden section pt-24 md:pt-28">
        <div class="hero-gradient"></div>

        <div class="container grid grid-cols-1 lg:grid-cols-12 gap-10 items-center">
            <!-- Texto -->
            <div class="lg:col-span-7 text-center lg:text-left">
      <span class="badge">
        <span class="icon-[mdi--sparkles] text-[18px]"></span>
        A Revolução Digital do Seu Negócio
      </span>

                <h1 class="mt-4 text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight tracking-tight text-balance">
                    Loja virtual <span class="whitespace-nowrap">direto no WhatsApp</span>
                </h1>

                <p class="mt-4 text-lg md:text-xl text-gray-700/90 dark:text-gray-300">
                    Soluções definitivas para WhatsApp Business, redes sociais e presença online — sem enrolação, com especialista de verdade.
                </p>

                <div class="mt-8 flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center lg:justify-start">
                    <a href={wa('Quero aumentar minhas vendas no WhatsApp')}
                       target="_blank" rel="noopener"
                       class="btn btn-primary">
                        <span class="icon-[mdi--whatsapp] text-[22px]"></span>
                        Falar com um especialista
                    </a>

                    <a href="#servicos" class="btn btn-ghost">
                        <span class="icon-[mdi--lightning-bolt] text-[18px]"></span>
                        Ver serviços
                    </a>
                </div>

                <!-- Selo confiança -->
                <div class="mt-6 inline-flex items-center gap-3 rounded-full border border-white/60 dark:border-white/10 bg-white/60 dark:bg-white/5 backdrop-blur px-4 py-2">
                    <div class="flex items-center gap-1" aria-label="Classificação média 5 de 5">
                        {[...Array(5)].map(() => <span class="icon-[mdi--star] text-yellow-400 text-[18px]"></span>)}
                    </div>
                    <span class="text-sm text-gray-700 dark:text-gray-300">
          <strong class="font-semibold">5.0</strong> / 5 — clientes satisfeitos
        </span>
                </div>
            </div>

            <!-- Imagem livre -->
            <div class="lg:col-span-5 flex justify-center lg:justify-end">
                <img src="/images/hero-1-img.png"
                     alt="Cliente feliz realizando compras pelo WhatsApp"
                     class="max-h-[480px] w-auto object-contain drop-shadow-xl"/>
            </div>
        </div>
    </section>


    <!-- ================= SERVIÇOS ================= -->
    <section id="servicos" class="section">
        <div class="container">
            <div class="text-center max-w-3xl mx-auto">
                <h2 class="text-sm md:text-base font-semibold text-primary">Nossos Serviços</h2>
                <p class="mt-2 text-3xl sm:text-4xl font-extrabold tracking-tight">
                    Gestão de redes sociais e soluções digitais que geram resultados
                </p>
            </div>

            <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
                <!-- Gestão de Redes -->
                <article class="card card-hover p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--instagram] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Gestão de Redes Sociais</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">
                        Postagens todos os dias, inclusive domingos e feriados, para manter sua marca sempre presente.
                    </p>
                </article>

                <!-- Catálogo WhatsApp -->
                <article class="card card-hover p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--whatsapp] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Catálogo de Produtos no WhatsApp</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">
                        Transforme o WhatsApp em sua loja virtual, com catálogos organizados e automatizados.
                    </p>
                </article>

                <!-- Criação de Logomarcas -->
                <article class="card card-hover p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--palette-outline] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Criação de Logomarcas</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">
                        Identidade visual profissional para destacar sua marca em qualquer rede social.
                    </p>
                </article>

                <!-- Vendas em E-commerce -->
                <article class="card card-hover p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--cart-outline] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Vendas em E-commerce</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">
                        Estrutura completa para vender online com integração ao WhatsApp e marketplaces.
                    </p>
                </article>

                <!-- Automação de WhatsApp -->
                <article class="card card-hover p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--robot-outline] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Automação de WhatsApp</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">
                        Atendimento inteligente e automatizado para responder clientes 24h por dia.
                    </p>
                </article>

                <!-- Venda no Automático -->
                <article class="card card-hover p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--autorenew] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Venda no Automático</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">
                        Estruturamos funis de vendas com automação para que seus clientes comprem sozinhos —
                        sem você precisar estar online 24h por dia.
                    </p>
                </article>

            </div>
        </div>
    </section>





    <section id="portfolio" class="section">
        <div class="container text-center">
            <h2 class="text-sm md:text-base font-semibold text-primary">Nosso Portfólio</h2>
            <p class="mt-2 text-3xl sm:text-4xl font-extrabold tracking-tight">
                Algumas marcas que já ajudamos a construir
            </p>

            <div class="mt-10 grid grid-cols-2 md:grid-cols-4 gap-6">
                <img src="/images/logos/adsalvos.png" alt="Marca 1" class="h-60 object-contain mx-auto"/>
                <img src="/images/logos/arado.png" alt="Marca 2" class="h-60 object-contain mx-auto"/>
                <img src="/images/logos/i9criativa.png" alt="Marca 2" class="h-60 object-contain mx-auto"/>
                <img src="/images/logos/divcomp.png" alt="Marca 3" class="h-60 object-contain mx-auto"/>
                <img src="/images/logos/eletro-serrano.png" alt="Marca 4" class="h-60 object-contain mx-auto"/>
                <img src="/images/logos/ideale.png" alt="Marca 4" class="h-60 object-contain mx-auto"/>
                <img src="/images/logos/ifix.png" alt="Marca 4" class="h-60 object-contain mx-auto"/>
                <img src="/images/logos/libano.png" alt="Marca 4" class="h-60 object-contain mx-auto"/>
                <img src="/images/logos/sabio.png" alt="Marca 4" class="h-60 object-contain mx-auto"/>
                <img src="/images/logos/tempmobile.png" alt="Marca 4" class="h-60 object-contain mx-auto"/>
            </div>
        </div>
    </section>









    <!-- ================= SOBRE ================= -->
    <section id="sobre" class="section">
        <div class="container grid md:grid-cols-2 gap-10 items-center">
            <div>
                <h2 class="text-3xl md:text-4xl font-extrabold tracking-tight">
                    Sobre a <span class="text-primary">LideraZap</span>
                </h2>
                <p class="mt-4 text-gray-700 dark:text-gray-300">
                    Somos especialistas em transformar a comunicação do seu negócio em vendas. Montamos o catálogo no WhatsApp, estruturamos conteúdo e fluxo de respostas, e criamos campanhas que geram resultado.
                </p>
                <ul class="mt-6 space-y-3 text-gray-700 dark:text-gray-300">
                    <li class="flex items-center gap-2"><span class="icon-[mdi--check-decagram] text-primary text-[20px]"></span> Foco total em conversão</li>
                    <li class="flex items-center gap-2"><span class="icon-[mdi--check-decagram] text-primary text-[20px]"></span> Processos simples e sem complicação</li>
                    <li class="flex items-center gap-2"><span class="icon-[mdi--check-decagram] text-primary text-[20px]"></span> Atendimento humano, direto no WhatsApp</li>
                </ul>
            </div>

            <div class="relative">
                <div class="absolute -inset-1 bg-gradient-to-tr from-indigo-500/30 to-purple-500/30 blur-xl rounded-3xl -z-10"></div>
                <div class="card p-6">
                    <div class="grid grid-cols-3 gap-6 text-center">
                        <div>
                            <div class="text-3xl font-extrabold">+120</div>
                            <div class="mt-1 text-sm text-gray-500 dark:text-gray-400">itens configurados</div>
                        </div>
                        <div>
                            <div class="text-3xl font-extrabold">+30</div>
                            <div class="mt-1 text-sm text-gray-500 dark:text-gray-400">catálogos ativos</div>
                        </div>
                        <div>
                            <div class="text-3xl font-extrabold">100%</div>
                            <div class="mt-1 text-sm text-gray-500 dark:text-gray-400">suporte humano</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ================= AVALIAÇÕES ================= -->
    <section id="avaliacoes" class="section">
        <div class="container">
            <div class="text-center">
          <span class="badge">
            <span class="icon-[mdi--google] text-[18px]"></span>
            Avaliações no Google
          </span>
                <h2 class="mt-2 text-3xl md:text-4xl font-extrabold tracking-tight">
                    O que dizem sobre a <span class="text-primary">LideraZap</span>
                </h2>

                <div class="mt-4 inline-flex items-center gap-3 rounded-full border border-white/60 dark:border-white/10 bg-white/60 dark:bg-white/5 backdrop-blur px-4 py-2">
                    <div class="flex items-center gap-1" aria-label="Classificação média 5 de 5">
                        {[...Array(5)].map(() => <span class="icon-[mdi--star] text-yellow-400 text-[18px]"></span>)}
                    </div>
                    <span class="text-sm text-gray-700 dark:text-gray-300">
              <strong class="font-semibold">5.0</strong> / 5 — baseado em <span class="font-semibold">N</span> avaliações
            </span>
                </div>

                <div class="mt-5">
                    <a href="SUA_URL_DE_AVALIACOES_GOOGLE" target="_blank" rel="noopener"
                       class="inline-flex items-center gap-2 text-sm font-semibold text-primary hover:opacity-90">
                        <span class="icon-[mdi--open-in-new] text-[18px]"></span>
                        Ver todas no Google
                    </a>
                </div>
            </div>

            <!-- Carrossel -->
            <div class="mt-10 overflow-x-auto hide-scrollbar" role="region" aria-label="Depoimentos">
                <ul class="grid grid-cols-1 md:grid-cols-3 gap-6 min-w-[320px] md:min-w-0">
                    {["cliente-1.jpg","cliente-2.jpg","cliente-3.jpg"].map((img, i) => (
                            <li class="card p-6">
                                <div class="flex items-center gap-4">
                                    <img src={`/images/avatars/${img}`} alt="Foto de cliente"
                                         class="h-12 w-12 rounded-full object-cover bg-gray-100 dark:bg-zinc-800"
                                         loading="lazy"
                                         onerror={`this.src='https://placehold.co/150x150?text=Cliente+${i+1}'`} />
                                    <div>
                                        <p class="font-semibold">Nome do Cliente</p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">Data da avaliação</p>
                                    </div>
                                </div>
                                <div class="mt-3 flex items-center gap-0.5" aria-label="5 de 5">
                                    {[...Array(5)].map(() => <span class="icon-[mdi--star] text-yellow-400 text-[18px]"></span>)}
                                </div>
                                <p class="mt-3 text-gray-700 dark:text-gray-300 leading-relaxed">“Comentário de exemplo sobre os serviços da LideraZap.”</p>
                                <div class="mt-4 flex items-center gap-2 text-xs text-gray-500 dark:text-gray-400">
                                    <span class="icon-[mdi--google] text-[16px]"></span>
                                    <span>Avaliação do Google</span>
                                </div>
                            </li>
                    ))}
                </ul>
            </div>

            <script type="application/ld+json" is:inline>
                {
                    "@context": "https://schema.org",
                    "@type": "LocalBusiness",
                    "name": "LideraZap",
                    "url": "https://liderazap.com/",
                    "aggregateRating": { "@type": "AggregateRating", "ratingValue": "5.0", "reviewCount": "N" }
                }
            </script>
        </div>
    </section>

    <!-- ================= CTA FINAL ================= -->
    <section id="contato" class="section">
        <div class="container text-center">
            <div class="card p-10">
                <span class="icon-[mdi--whatsapp] text-[72px] text-primary inline-block mb-4"></span>
                <h2 class="text-4xl md:text-5xl font-extrabold text-balance">Pronto para impulsionar seu negócio?</h2>
                <p class="mt-4 text-lg md:text-xl text-gray-700 dark:text-gray-300">Sem formulários e sem espera. Clique e fale direto no WhatsApp.</p>
                <a href={wa('Olá! Gostaria de saber mais sobre os serviços da LideraZap.')}
                   target="_blank" rel="noopener"
                   class="mt-8 btn btn-primary text-lg px-8 py-4">
                    <span class="icon-[mdi--whatsapp] text-[22px]"></span>
                    (32) 9 9840-8646
                </a>
            </div>
        </div>
    </section>
</main>

<!-- BOTÃO FIXO WHATSAPP -->
<a href={wa('Olá! Vim pelo site.')} target="_blank" rel="noopener" class="fab-whatsapp">
    <span class="icon-[mdi--whatsapp] text-[18px]"></span>
    <span class="font-semibold">Fale conosco</span>
</a>

<Footer />
</body>
</html>
