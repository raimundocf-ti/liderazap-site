---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Icon from 'astro-icon';

const whatsapp = '5532998408646';
const wa = (msg: string) => `https://wa.me/${whatsapp}?text=${encodeURIComponent(msg)}`;
---

<html lang="pt-BR" class="scroll-smooth">
<head>
    <BaseHead
            title="LideraZap — Transformando Negócios Digitais"
            description="Loja no WhatsApp, gestão de redes e presença online feita por especialistas. Sem complicação, direto ao ponto."
    />
</head>

<body class="bg-gray-50 text-gray-900 antialiased">
<Header />

<main class="pt-20 md:pt-24">
    <!-- HERO -->
    <section class="relative w-full py-20 md:py-28 overflow-hidden">
        <div class="absolute inset-0 -z-10 bg-grid">
            <svg class="absolute left-1/2 -top-24 h-[900px] w-[1400px] -translate-x-1/2" viewBox="0 0 1024 1024" aria-hidden="true">
                <circle cx="512" cy="512" r="512" fill="url(#g)" fill-opacity="0.22"></circle>
                <defs>
                    <radialGradient id="g">
                        <stop stop-color="#8B5CF6"></stop>
                        <stop offset="1" stop-color="#6D28D9"></stop>
                    </radialGradient>
                </defs>
            </svg>
        </div>

        <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-12 gap-10 items-center">
            <div class="lg:col-span-7 text-center lg:text-left">
                <span class="inline-block text-sm md:text-base font-semibold text-primary">A Revolução Digital do Seu Negócio</span>
                <h1 class="mt-3 text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight text-balance text-gray-900">
                    Tenha sua loja virtual <span class="whitespace-nowrap">direto no WhatsApp</span>
                </h1>
                <p class="mt-4 text-lg md:text-xl text-gray-700">
                    Soluções definitivas para WhatsApp Business, redes sociais e presença online — sem enrolação, com especialista de verdade.
                </p>
                <div class="mt-8 flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center lg:justify-start">
                    <a href={wa('Quero aumentar minhas vendas no WhatsApp')} target="_blank" rel="noopener"
                       class="inline-flex items-center gap-3 bg-primary hover:opacity-90 text-white font-bold px-6 py-3 rounded-xl shadow transition-transform hover:scale-[1.02] focus-visible:ring-2 ring-primary">
                        <Icon name="mdi:whatsapp" width="24" height="24" />
                        Falar com um especialista
                    </a>
                    <a href="#servicos" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl border border-gray-300 text-gray-700 hover:border-primary hover:text-primary">
                        <Icon name="mdi:lightning-bolt" width="20" height="20" />
                        Ver serviços
                    </a>
                </div>
            </div>

            <div class="lg:col-span-5">
                <div class="relative mx-auto max-w-md">
                    <div class="absolute -inset-1 bg-gradient-to-tr from-purple-500/40 to-indigo-400/40 blur-2xl rounded-[2rem] -z-10"></div>
                    <div class="bg-white/90 rounded-[2rem] border border-white/60 shadow-xl p-4">
                        <div class="aspect-[9/14.5] rounded-[1.6rem] bg-gray-100 flex items-center justify-center overflow-hidden">
                            <img src="/images/mulher-com-sacola.png" alt="Mulher feliz com sacolas de compra saindo do celular" class="h-full w-auto object-cover"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SERVIÇOS -->
    <section id="servicos" class="w-full py-16 md:py-24 bg-gradient-to-br from-gray-50 via-white to-gray-100">
        <div class="max-w-7xl mx-auto px-6">
            <h2 class="text-center text-sm md:text-base font-semibold text-primary">Nossos Serviços</h2>
            <p class="mx-auto mt-2 max-w-2xl text-center text-3xl sm:text-4xl font-extrabold tracking-tight text-gray-900">
                Soluções para transformar seu negócio no digital
            </p>

            <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
                <!-- Gestão de Redes -->
                <article class="card rounded-2xl shadow-md p-8 border border-gray-100 text-left hover:shadow-xl transition">
                    <div class="bg-primary/10 rounded-full w-16 h-16 flex items-center justify-center mb-6">
                        <Icon name="mdi:instagram" width="34" class="text-primary" />
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900">Gestão de Redes Sociais</h3>
                    <p class="mt-3 text-gray-600">Estratégia, conteúdo e acompanhamento para manter sua marca relevante e engajadora.</p>
                    <ul class="mt-5 space-y-2 text-sm text-gray-700">
                        <li class="flex items-center gap-2"><Icon name="mdi:check" width="16" class="text-primary" /> Posts e Reels criativos</li>
                        <li class="flex items-center gap-2"><Icon name="mdi:check" width="16" class="text-primary" /> Planejamento de campanhas</li>
                        <li class="flex items-center gap-2"><Icon name="mdi:check" width="16" class="text-primary" /> Relatórios de desempenho</li>
                    </ul>
                    <div class="mt-6">
                        <a href="/gestao-redes" class="inline-flex items-center gap-2 text-primary font-semibold hover:opacity-90">
                            Ver detalhes
                            <Icon name="mdi:arrow-right" width="18" />
                        </a>
                    </div>
                </article>

                <!-- Catálogo WhatsApp -->
                <article class="card rounded-2xl shadow-md p-8 border border-gray-100 text-left hover:shadow-xl transition">
                    <div class="bg-primary/10 rounded-full w-16 h-16 flex items-center justify-center mb-6">
                        <Icon name="mdi:whatsapp" width="34" class="text-primary" />
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900">Catálogo de Vendas no WhatsApp</h3>
                    <p class="mt-3 text-gray-600">Transforme seu WhatsApp Business em uma loja virtual prática e integrada.</p>
                    <ul class="mt-5 space-y-2 text-sm text-gray-700">
                        <li class="flex items-center gap-2"><Icon name="mdi:check" width="16" class="text-primary" /> Criação e organização de catálogos</li>
                        <li class="flex items-center gap-2"><Icon name="mdi:check" width="16" class="text-primary" /> Funil de conversão otimizado</li>
                        <li class="flex items-center gap-2"><Icon name="mdi:check" width="16" class="text-primary" /> Consultoria para aumentar vendas</li>
                    </ul>
                    <div class="mt-6">
                        <a href={wa('Quero montar meu catálogo no WhatsApp')} target="_blank" rel="noopener"
                           class="inline-flex items-center gap-2 bg-primary text-white px-4 py-2 rounded-lg font-semibold shadow hover:opacity-95 focus-visible:ring-2 ring-primary">
                            <Icon name="mdi:whatsapp" width="18" />
                            Começar agora
                        </a>
                    </div>
                </article>

                <!-- Sites e Landings -->
                <article class="card rounded-2xl shadow-md p-8 border border-gray-100 text-left hover:shadow-xl transition">
                    <div class="bg-primary/10 rounded-full w-16 h-16 flex items-center justify-center mb-6">
                        <Icon name="mdi:monitor-dashboard" width="34" class="text-primary" />
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900">Sites e Landing Pages</h3>
                    <p class="mt-3 text-gray-600">Páginas rápidas, bonitas e com SEO — alinhadas ao funil do WhatsApp.</p>
                    <ul class="mt-5 space-y-2 text-sm text-gray-700">
                        <li class="flex items-center gap-2"><Icon name="mdi:check" width="16" class="text-primary" /> Landing com foco em conversão</li>
                        <li class="flex items-center gap-2"><Icon name="mdi:check" width="16" class="text-primary" /> Integrações e pixels</li>
                        <li class="flex items-center gap-2"><Icon name="mdi:check" width="16" class="text-primary" /> Performance e SEO</li>
                    </ul>
                </article>
            </div>
        </div>
    </section>

    <!-- ... (SOBRE, AVALIAÇÕES e CONTATO seguem a mesma lógica com <Icon name="mdi:..."/> ) -->
</main>

<!-- BOTÃO FIXO WHATSAPP -->
<a href={wa('Olá! Vim pelo site.')} target="_blank" rel="noopener" class="fab-whatsapp">
    <Icon name="mdi:whatsapp" width="22" />
    <span class="font-semibold">Fale conosco</span>
</a>

<Footer />
</body>
</html>
