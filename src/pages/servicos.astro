---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FAQ from '../components/FAQ.astro';

const whatsapp = '5532998408646';
const wa = (msg: string) => `https://wa.me/${whatsapp}?text=${encodeURIComponent(msg)}`;

const title = "Serviços — LideraZap";
const description = "Hospedagem gerenciada, e-mail profissional, desenvolvimento de sites e lojas virtuais, catálogo WhatsApp, gestão de redes, SEO técnico e tráfego pago. Tudo para vender com consistência.";

const anchors = [
    { id: 'web', label: 'Sites & Lojas' },
    { id: 'infra', label: 'Hospedagem & E-mail' },
    { id: 'marketing', label: 'Marketing & SEO' },
    { id: 'suporte', label: 'Manutenção & Segurança' },
];

const faqItems = [
    { q: "Vocês configuram domínio, SSL e e-mail?", a: "Sim. Fazemos a ponte completa: domínio, DNS, emissão de SSL e criação de caixas de e-mail profissionais." },
    { q: "Posso contratar só hospedagem ou só site?", a: "Pode! Todos os serviços são modulares. Também temos planos combinados em /planos." },
    { q: "Quais prazos de entrega?", a: "Landing em Astro costuma sair em poucos dias; sites/lojas variam conforme escopo. A agenda é alinhada no início do projeto." },
    { q: "Vocês instalam pixels e medem resultados?", a: "Sim. Meta Pixel, Google Analytics/Tags e UTMs. No plano Expert, enviamos relatório mensal." },
];

// JSON-LD: Breadcrumbs + ItemList (Serviços)
const breadcrumbsJsonLd = {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://liderazap.com/" },
        { "@type": "ListItem", "position": 2, "name": "Serviços", "item": "https://liderazap.com/servicos" }
    ]
};

const servicesListJsonLd = {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "itemListElement": [
        { "@type": "Service", "name": "Desenvolvimento de Sites em Astro", "serviceType": "Web Development", "url": "https://liderazap.com/servicos#sites" },
        { "@type": "Service", "name": "Lojas Virtuais", "serviceType": "E-commerce", "url": "https://liderazap.com/servicos#lojas" },
        { "@type": "Service", "name": "Hospedagem Gerenciada", "serviceType": "Hosting", "url": "https://liderazap.com/servicos#hospedagem" },
        { "@type": "Service", "name": "E-mail Profissional", "serviceType": "Business Email", "url": "https://liderazap.com/servicos#email" },
        { "@type": "Service", "name": "Catálogo WhatsApp", "serviceType": "WhatsApp Catalog", "url": "https://liderazap.com/servicos#catalogo" },
        { "@type": "Service", "name": "Gestão de Redes Sociais", "serviceType": "Social Media", "url": "https://liderazap.com/servicos#redes" },
        { "@type": "Service", "name": "SEO Técnico & Conteúdo", "serviceType": "SEO", "url": "https://liderazap.com/servicos#seo" },
        { "@type": "Service", "name": "Tráfego Pago & Pixels", "serviceType": "Paid Media", "url": "https://liderazap.com/servicos#ads" },
        { "@type": "Service", "name": "Manutenção, Performance & Segurança", "serviceType": "Maintenance", "url": "https://liderazap.com/servicos#manutencao" },
        { "@type": "Service", "name": "Migração de Site", "serviceType": "Migration", "url": "https://liderazap.com/servicos#migracao" }
    ]
};
---

<html lang="pt-BR" class="scroll-smooth">
<head>
    <BaseHead title={title} description={description} />
    <script type="application/ld+json">{JSON.stringify(breadcrumbsJsonLd)}</script>
    <script type="application/ld+json">{JSON.stringify(servicesListJsonLd)}</script>
    </head>

<body class="antialiased bg-[var(--surface-2)] text-gray-900 dark:text-gray-100">
<Header />

<main>
    <!-- ================= HERO ================= -->
    <section class="relative overflow-hidden section pt-24 md:pt-28">
        <div class="hero-gradient"></div>

        <div class="container grid grid-cols-1 lg:grid-cols-12 gap-10 items-center">
            <!-- Texto -->
            <div class="lg:col-span-7 text-center lg:text-left">
        <span class="badge">
          <span class="icon-[mdi--sparkles] text-[18px]"></span>
          Serviços profissionais de ponta a ponta
        </span>

                <h1 class="mt-4 text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight tracking-tight text-balance">
                    Do domínio ao <span class="whitespace-nowrap">site que vende</span>
                </h1>

                <p class="mt-4 text-lg md:text-xl text-gray-700/90 dark:text-gray-300">
                    Hospedagem gerenciada, e-mail profissional, sites e lojas em Astro, catálogo no WhatsApp, redes, SEO e mídia. Tudo integrado — rápido, bonito e com mensuração.
                </p>

                <div class="mt-8 flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center lg:justify-start">
                    <a href={wa('Quero um projeto completo com hospedagem, site e marketing')}
                       target="_blank" rel="noopener" class="btn btn-primary">
                        <span class="icon-[mdi--whatsapp] text-[22px]"></span>
                        Falar com um especialista
                    </a>
                    <a href="/planos" class="btn btn-ghost">
                        <span class="icon-[mdi--lightning-bolt] text-[18px]"></span>
                        Ver planos recomendados
                    </a>
                </div>
            </div>

            <!-- Ilustração -->
            <div class="lg:col-span-5 flex justify-center lg:justify-end">
                <img src="/images/hero-2-img.png"
                     alt="Ilustração de serviços digitais integrados"
                     class="max-h-[480px] w-auto object-contain drop-shadow-xl"/>
            </div>
        </div>
    </section>

    <!-- ================= SUBNAV ================= -->
    <nav class="sticky top-16 z-40 backdrop-blur bg-white/70 dark:bg-zinc-950/70 border-y border-white/60 dark:border-white/10">
        <div class="container py-3 overflow-x-auto no-scrollbar">
            <ul class="flex gap-4 text-sm whitespace-nowrap">
                {anchors.map(a => (
                        <li><a href={`#${a.id}`} class="inline-flex items-center gap-2 px-3 py-2 rounded-xl hover:bg-white/70 dark:hover:bg-white/5">
                            <span class="icon-[mdi--chevron-right] text-[18px]"></span>{a.label}
                        </a></li>
                ))}
            </ul>
        </div>
    </nav>

    <!-- ================= SITES & LOJAS ================= -->
    <section id="web" class="section">
        <div class="container">
            <div class="text-center max-w-3xl mx-auto">
                <h2 class="text-sm md:text-base font-semibold text-primary">Web de Alta Performance</h2>
                <p class="mt-2 text-3xl sm:text-4xl font-extrabold tracking-tight">Sites e Lojas Virtuais que convertem</p>
            </div>

            <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
                <!-- Destaque: Sites em Astro -->
                <div class="group relative">
                    <div class="absolute -inset-0.5 rounded-2xl bg-gradient-to-r from-purple-500 via-fuchsia-500 to-indigo-500 opacity-60 blur group-hover:opacity-80 transition"></div>
                    <article id="sites" class="relative card p-8 text-left border-2 border-transparent hover:border-white/50 dark:hover:border-white/10 transition">
                        <span class="absolute top-0 right-0 bg-primary text-white text-xs font-bold px-3 py-1 rounded-tr-lg rounded-bl-lg">Recomendado</span>
                        <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                            <span class="icon-[mdi--monitor-dashboard] text-primary text-[34px]"></span>
                        </div>
                        <h3 class="text-xl font-semibold">Desenvolvimento de Sites (Astro)</h3>
                        <p class="mt-3 text-gray-600 dark:text-gray-300">Páginas ultra rápidas, acessíveis e com SEO técnico impecável.</p>
                        <ul class="mt-5 space-y-2 text-sm text-gray-700 dark:text-gray-300">
                            <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Landing focada em conversão</li>
                            <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Integrações (WhatsApp, formulários, mapas)</li>
                            <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Schema, metas, sitemap e performance</li>
                        </ul>
                        <div class="mt-6">
                            <a href={wa('Quero um site em Astro de alta performance')} target="_blank" rel="noopener" class="btn btn-primary w-full justify-center">
                                Solicitar projeto
                            </a>
                        </div>
                    </article>
                </div>

                <!-- Lojas Virtuais -->
                <article id="lojas" class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--cart-outline] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Lojas Virtuais</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Estrutura para vender de verdade: catálogo, checkout e pixels.</p>
                    <ul class="mt-5 space-y-2 text-sm text-gray-700 dark:text-gray-300">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Catálogo organizado e variantes</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Integrações de pagamento/entrega (conforme escopo)</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Pixel/GA4 e eventos de funil</li>
                    </ul>
                    <div class="mt-6">
                        <a href={wa('Quero uma loja virtual com funil de conversão')} target="_blank" rel="noopener" class="btn btn-primary w-full justify-center">
                            Orçar agora
                        </a>
                    </div>
                </article>

                <!-- Landing de Campanha -->
                <article class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--rocket-launch-outline] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Landing de Campanha</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Páginas específicas para tráfego pago, com testes e métricas.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Proposta de valor, prova social e CTA forte</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> UTMs, eventos e thank-you page</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Reutilizável e fácil de iterar</li>
                    </ul>
                </article>
            </div>
        </div>
    </section>

    <!-- ================= HOSPEDAGEM & E-MAIL ================= -->
    <section id="infra" class="section bg-gradient-to-br from-gray-50 via-white to-gray-100 dark:from-zinc-900 dark:via-zinc-950 dark:to-zinc-900">
        <div class="container">
            <div class="text-center max-w-3xl mx-auto">
                <h2 class="text-sm md:text-base font-semibold text-primary">Infraestrutura Confiável</h2>
                <p class="mt-2 text-3xl sm:text-4xl font-extrabold tracking-tight">Hospedagem gerenciada e e-mail profissional</p>
            </div>

            <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
                <!-- Hospedagem -->
                <article id="hospedagem" class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--cloud-outline] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Hospedagem Gerenciada</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Ambiente otimizado para sites em Astro com CDN, cache e SSL.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> SSL gratuito e HTTP/2+</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Backups automáticos</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Monitoramento básico</li>
                    </ul>
                    <div class="mt-6">
                        <a href={wa('Quero hospedar meu site com a LideraZap')} target="_blank" rel="noopener" class="btn btn-primary w-full justify-center">
                            Contratar hospedagem
                        </a>
                    </div>
                </article>

                <!-- E-mail -->
                <article id="email" class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--email-lock] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">E-mail Profissional</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Caixas de e-mail no seu domínio, com DKIM/SPF e boa entregabilidade.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Criação e configuração de contas</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Antispam e aliases</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Suporte na migração</li>
                    </ul>
                    <div class="mt-6">
                        <a href={wa('Quero e-mail profissional no meu domínio')} target="_blank" rel="noopener" class="btn btn-primary w-full justify-center">
                            Criar e-mails
                        </a>
                    </div>
                </article>

                <!-- Domínio & SSL -->
                <article class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--shield-lock-outline] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Domínios & SSL</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Registro, DNS e emissão/renovação de certificados em dia.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Conexão ao site/loja</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> E-mail com verificação SPF/DKIM</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Rotinas de renovação</li>
                    </ul>
                </article>
            </div>
        </div>
    </section>

    <!-- ================= MARKETING & SEO ================= -->
    <section id="marketing" class="section">
        <div class="container">
            <div class="text-center max-w-3xl mx-auto">
                <h2 class="text-sm md:text-base font-semibold text-primary">Atração e Conversão</h2>
                <p class="mt-2 text-3xl sm:text-4xl font-extrabold tracking-tight">Marketing, Redes e SEO que funcionam</p>
            </div>

            <div class="mt-12 grid grid-cols-1 md:grid-cols-4 gap-6 lg:gap-8">
                <!-- Catálogo WhatsApp -->
                <article id="catalogo" class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--whatsapp] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Catálogo WhatsApp</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Seu WhatsApp Business como loja organizada e pronta para vender.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Categorias e itens padronizados</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Mensagens pré-formatadas e UTMs</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Boas práticas de foto e copy</li>
                    </ul>
                </article>

                <!-- Redes Sociais -->
                <article id="redes" class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--instagram] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Gestão de Redes</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Calendário, templates e constância de publicação.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Posts/Reels semanais</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Diretrizes visuais e copy</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Relatórios periódicos</li>
                    </ul>
                </article>

                <!-- SEO -->
                <article id="seo" class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--magnify-scan] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">SEO Técnico & Conteúdo</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Arquitetura limpa, schema, metas e pautas que atraem.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Títulos, descrições, headings</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Schema (FAQ/Product/Service) e sitemap</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Pautas (Blog) conforme intenção de busca</li>
                    </ul>
                </article>

                <!-- Ads -->
                <article id="ads" class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--chart-timeline-variant] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Tráfego Pago & Pixels</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Estrutura de mensuração e campanhas com clareza de dados.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Instalação de pixels/GA4</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Eventos de funil e UTMs</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Relatórios (conforme plano)</li>
                    </ul>
                </article>
            </div>
        </div>
    </section>

    <!-- ================= MANUTENÇÃO & SEGURANÇA ================= -->
    <section id="suporte" class="section">
        <div class="container">
            <div class="text-center max-w-3xl mx-auto">
                <h2 class="text-sm md:text-base font-semibold text-primary">Operação Contínua</h2>
                <p class="mt-2 text-3xl sm:text-4xl font-extrabold tracking-tight">Manutenção, Performance & Segurança</p>
            </div>

            <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
                <!-- Manutenção -->
                <article id="manutencao" class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--headset] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Manutenção & Suporte</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Ajustes, melhorias e atendimento humano sem burocracia.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Suporte via WhatsApp</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Pequenas evoluções contínuas</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> SLA conforme plano</li>
                    </ul>
                </article>

                <!-- Performance & Segurança -->
                <article class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--speedometer] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Performance & Segurança</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Melhorias de LCP/CLS, hardening e rotinas de backup.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Otimização de assets e cache</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Monitoramento e alertas</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Backups verificados</li>
                    </ul>
                </article>

                <!-- Migração -->
                <article id="migracao" class="card p-8 text-left">
                    <div class="rounded-full w-16 h-16 grid place-items-center mb-6 bg-[color-mix(in_oklab,var(--primary)_16%,transparent)]">
                        <span class="icon-[mdi--swap-horizontal] text-primary text-[34px]"></span>
                    </div>
                    <h3 class="text-xl font-semibold">Migração de Site</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-300">Trazemos seu site para nossa estrutura, com mínimo downtime.</p>
                    <ul class="mt-5 space-y-2 text-sm">
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Planejamento e checklist</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Redirecionamentos e SEO preservado</li>
                        <li class="flex items-center gap-2"><span class="icon-[mdi--check] text-primary"></span> Testes antes de apontar o DNS</li>
                    </ul>
                </article>
            </div>

            <!-- Processo em 5 passos -->
            <div class="mt-12 rounded-2xl border border-white/60 dark:border-white/10 bg-white/60 dark:bg-white/5 backdrop-blur p-6 md:p-8">
                <h3 class="text-xl md:text-2xl font-bold tracking-tight">Como trabalhamos (5 passos)</h3>
