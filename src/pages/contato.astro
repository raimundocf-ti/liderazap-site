---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const title = "Contato — LideraZap";
const description = "Fale com um especialista. Tiramos suas dúvidas e indicamos o melhor plano para o seu momento.";
const whatsapp = "5532998408646";
---

<html lang="pt-BR">
<head>
    <BaseHead title={title} description={description} />
</head>
<body>
<Header />

<section class="section pt-20">
    <div class="container max-w-2xl">
        <h1 class="text-3xl sm:text-4xl font-extrabold tracking-tight">Contato</h1>
        <p class="mt-3 text-zinc-600 dark:text-zinc-300">
            Envie sua mensagem. Respondemos rapidinho!
        </p>

        <form class="mt-8 grid gap-4 rounded-2xl border p-6 bg-white dark:bg-zinc-900"
              onsubmit={`event.preventDefault();
                const n = (document.getElementById('n') as HTMLInputElement).value;
                const e = (document.getElementById('e') as HTMLInputElement).value;
                const m = (document.getElementById('m') as HTMLTextAreaElement).value;
                const txt = encodeURIComponent('Olá, sou ' + n + ' (' + e + '). ' + m);
                window.location.href = 'https://wa.me/${whatsapp}?text=' + txt;`}>
            <div class="grid md:grid-cols-2 gap-4">
                <div>
                    <label class="text-sm font-medium">Nome</label>
                    <input id="n" required class="mt-1 w-full rounded-xl border px-3 py-2 bg-transparent" />
                </div>
                <div>
                    <label class="text-sm font-medium">E-mail</label>
                    <input id="e" type="email" required class="mt-1 w-full rounded-xl border px-3 py-2 bg-transparent" />
                </div>
            </div>
            <div>
                <label class="text-sm font-medium">Mensagem</label>
                <textarea id="m" required rows="5" class="mt-1 w-full rounded-xl border px-3 py-2 bg-transparent"></textarea>
            </div>
            <button class="inline-flex items-center gap-2 rounded-xl bg-primary px-5 py-3 text-white font-medium hover:opacity-90">
                <span class="icon-[mdi--whatsapp] text-xl"></span>
                Enviar pelo WhatsApp
            </button>
        </form>
    </div>
</section>

<Footer />
</body>
</html>
