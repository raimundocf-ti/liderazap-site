---
export interface Props {
    slot: string; // ex: "1234567890"
    format?: string; // "auto" por padr√£o
    fullWidth?: boolean; // se true, ocupa largura total
    client?: string; // opcional, default placeholder
}

const {
    slot,
    format = "auto",
    fullWidth = false,
    client = "ca-pub-xxxxxxxxxxxxxxxx"
} = Astro.props;
---

<div class={fullWidth ? "w-full my-6" : "my-6"}>
    <ins class="adsbygoogle block"
         style="display:block"
         data-ad-client={client}
         data-ad-slot={slot}
         data-ad-format={format}
         data-full-width-responsive="true"></ins>
</div>

<script is:inline>
    (window.adsbygoogle = window.adsbygoogle || []).push({});
</script>
