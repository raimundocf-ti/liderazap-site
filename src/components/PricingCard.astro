---
export interface Props {
    title: string;
    subtitle?: string;
    price: string;
    period?: string;
    ctaHref: string;
    ctaLabel?: string;
    features: string[];
    highlight?: boolean;
    badge?: string; // ex: "Mais vendido"
}

const {
    title,
    subtitle = "",
    price,
    period = "/mês",
    ctaHref,
    ctaLabel = "Começar agora",
    features,
    highlight = false,
    badge,
} = Astro.props;
---

<div class={`relative card rounded-2xl border shadow-sm p-8 flex flex-col gap-6
  ${highlight ? "border-primary ring-1 ring-primary/20 shadow-lg bg-white/70 dark:bg-zinc-900/60 backdrop-blur" : "bg-white dark:bg-zinc-900 border-zinc-200/60 dark:border-zinc-700/50"}`}>
    {badge && (
            <span class="absolute -top-px -right-px bg-primary text-white text-xs font-bold px-3 py-1 rounded-bl-2xl">
      {badge}
    </span>
    )}

    <header class="space-y-1">
        <h3 class="text-xl font-semibold tracking-tight">{title}</h3>
        {subtitle && <p class="text-sm text-zinc-600 dark:text-zinc-400">{subtitle}</p>}
    </header>

    <div class="flex items-baseline gap-2">
        <span class="text-4xl font-extrabold tracking-tight">{price}</span>
        <span class="text-sm text-zinc-500 dark:text-zinc-400">{period}</span>
    </div>

    <a href={ctaHref}
       class="inline-flex items-center justify-center rounded-xl px-4 py-2 text-white bg-primary hover:opacity-90 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary/50 transition">
        {ctaLabel}
    </a>

    <ul class="mt-2 space-y-3">
        {features.map((f) => (
                <li class="flex items-start gap-3">
                    <span class="icon-[mdi--check-circle] mt-0.5 text-lg"></span>
                    <span class="text-sm leading-relaxed">{f}</span>
                </li>
        ))}
    </ul>
</div>
